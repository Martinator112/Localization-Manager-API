# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.ProjectController.index

GET     /project/list               controllers.ProjectController.getProjects
GET     /project/hash_map           controllers.ProjectController.getProjectsAsHashMap

OPTIONS  /*url                      controllers.AppController.options(url)
POST     /project                   controllers.ProjectController.postProject
DELETE   /project/:id               controllers.ProjectController.deleteProject(id)

POST    /project/:id/status         controllers.ProjectController.postProjectStatus(id)

GET     /auth/google                controllers.AuthController.google
GET     /auth/google/handler        controllers.AuthController.handleGoogle
GET     /auth/logout                controllers.AuthController.logout

GET     /user                       controllers.UserController.getUsers
POST    /user/:id                   controllers.UserController.updateUser(id)

GET     /converter                  controllers.ConverterController.getConverters
POST    /converter                  controllers.ConverterController.postConverter
POST    /converter/:id              controllers.ConverterController.postConverterUpdate(id)
GET     /converter/:id              controllers.ConverterController.getConverter(id)
DELETE  /converter/:id              controllers.ConverterController.deleteConverter(id)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /sessiontest                controllers.ProjectController.sessionTest
GET     /logged_user                controllers.AuthController.getLoggedUser